@model EL.Models.Ticket

<h3>Ben je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Ticket @Model.Titel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(ticket => ticket.Titel)
        </dt>

        <dd>
            @Html.DisplayFor(ticket => ticket.Titel)
        </dd>

        <dt>
            @Html.DisplayNameFor(ticket => ticket.Klacht)
        </dt>

        <dd>
            @Html.DisplayFor(ticket => ticket.Klacht)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(ticket => ticket.TicketId)

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar alle tickets", "Index")
        </div>
    }
</div>

@if (ViewBag.Message == "Fout")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Er is iets misgelopen, probeer opnieuw!")
        }
    </script>
}