@model EL.Models.Toestel

<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Toestel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(viewModel => viewModel.Naam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(viewModel => viewModel.Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(viewModel => viewModel.Naam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(viewModel => viewModel.AankoopDatum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(viewModel => viewModel.AankoopDatum, new { htmlAttributes = new { @class = "form-control", @id = "aankoopdatum" } })
                @Html.ValidationMessageFor(viewModel => viewModel.AankoopDatum, "", new { @class = "text-danger", id = "datepicker" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(viewModel => viewModel.Handleiding, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">               
                <input type="file" name="file" value="" />
                @Html.ValidationMessageFor(viewModel => viewModel.Handleiding, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(viewModel => viewModel.Kuisproduct, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(viewModel => viewModel.Kuisproduct, "Selecteer een kuisproduct", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(viewModel => viewModel.Kuisproduct, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Toevoegen" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Terug naar alle toestellen", "Index")
</div>

@section Scripts{

    <script type="text/javascript">
        $(function () {
            $('#aankoopdatum').datetimepicker({
                format: "D/MM/YYYY"
            });
        });
    </script>
}

@if (ViewBag.Message == "Fout")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Er is iets misgelopen, probeer opnieuw!")
        }
    </script>
}