@model EL.Models.Medewerker

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(medewerker => medewerker.MedewerkersId)
    @Html.HiddenFor(medewerker => medewerker.Persoon.PersoonsId)
