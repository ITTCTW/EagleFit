@model IEnumerable<EL.Models.Abonnement>

<h2>Alle Abonnementen</h2>

<p>
    @Html.ActionLink("Nieuw abonnement aanmaken", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(abonnement => abonnement.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(abonnement => abonnement.Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(abonnement => abonnement.PrijsPerMaand)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(abonnement => item.Naam)
        </td>
        <td>
            @Html.DisplayFor(abonnement => item.Omschrijving)
        </td>
        <td>
            € @Html.DisplayFor(abonnement => item.PrijsPerMaand)
        </td>
        <td>
            @Html.ActionLink("Wijzigen", "Edit", new { id=item.AbonnementId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AbonnementId }) |
            @Html.ActionLink("Verwijderen", "AbonnementDeactiveren", new { id=item.AbonnementId })
        </td>
    </tr>
}

</table>
